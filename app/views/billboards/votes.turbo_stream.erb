<turbo-stream action="replace" target="billboard_<%= @billboard.id %>">
  <template>
    <%= render @billboard %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="billboard-list">
  <template>
    <div class="container">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <%= render Billboard.order(votes: :desc) %>
      </div>
    </div>
  </template>
</turbo-stream>